<h1><%= @question.title %></h1>

 <div class="row">
   <% if @question.resolved %>
    <div class="col-md-8" style="margin-bottom:20px;">
      <div class="bg-success" style="padding:2px 8px 8px 8px; border-radius:5px;">
        <h3 style="margin-left:10px; color: #eeeee;">This question has been resolved.</h3>
      </div>
    </div>
   <% end %>
   <div class="col-md-8 well">
     <h4 class="text-primary">Question:</h4>
     <p><%= @question.body %></p>
   </div>
   <div class="col-md-4">
 <!-- #5 -->
     <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
     <%= link_to "Delete question", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this question?'} %>
   </div>
 </div>
