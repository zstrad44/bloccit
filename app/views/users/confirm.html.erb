<row>
  <div class="col-sm-12 col-lg-8 col-lg-offset-2 col">
    <h1>Sign Up Confirmation</h1>
    <h3>Are you sure these values are correct?</h3>
    <br>
    <h4><strong>Email:</strong>&nbsp;<span class="text-primary"><%= @user.email %></span></h4>
    <h4><strong>Name:</strong>&nbsp;<span class="text-primary"><%= @user.name.titleize %></span></h4>
    <br>
    <div class="row">
      <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">
        <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success btn-lg btn-block' %>
        </div>
      <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 col-lg-offset-1 col-md-offset-1">
        <%= button_to "No", { :action => :new }, :method => :get, class: 'btn btn-danger btn-lg btn-block' %>
      </div>
    </div>
  </div>
</row>
